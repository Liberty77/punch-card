/* pages/timer/index.wxss */

.content {
  margin: 0 auto;
}

.header-section {
  margin-left: 24rpx;
  display: flex;
  direction: row;
  height: 120rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.user-name {
  font-size: 40rpx;
  font-weight: 400;
  color: #333;
}

.work-schedule {
  font-size: 30rpx;
  font-weight: 400;
  color: #333;
}

.header-currentTime{
  font-size: 28rpx;
  font-weight: 400;
  color: #999;
}

.header-avatar {
flex-grow: 2;
}
.header-info {
flex-grow: 10;
}
.header-currentTime {
  flex-grow: 2;
  align-self: center;
}

.division-line {
  background-color: #f1f1f1;
  width: 120%;
  height: 2rpx;
  margin-left: -24rpx;
  margin-right: 24rpx;
}

.body-section {
  margin-left: 24rpx;
}

.saying {
  display: inline-block;
  margin-top: 40rpx;
  color: #888;
  font-size: 30rpx;
  font-weight: 320;
  line-height: 32rpx;
}

.time-start-end {
  margin-top: 40rpx;
}

.time-dot {
  margin: 0;
  padding: 0;
  width: 40rpx;
  height: 40rpx;
}

.time-line {
  width: 40rpx;
  height: 120rpx;
}

.office-hours {
  color: #666;
  font-size: 36rpx;
  line-height: 50rpx;
  font-weight: 400;
}

.punch-card-status {
  position: relative;
  display: inline;
}

.punch-card-status-text {
  position: absolute;
  background-color: orange;
  left: 10rpx;
  top: 70rpx;
  width: 80rpx;
  padding: 2rpx 2rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 400;
}

.timer-click {
  margin-top: 80rpx;
  margin-left: -24rpx;
  padding: 0;
  text-align: center;
}

.big-circle {
  background-color: rgb(93, 163, 93);
  width: 280rpx;
  height: 280rpx;
  border-radius: 50%;
  box-shadow: 6rpx 6rpx 6rpx #f1f1f1;
}
.punch-card-detail {
  position: relative;
  text-align: center;
}

.punch-card-info {
 position: absolute;
 top: 80rpx;
 left: 60rpx;
}

.punch-card-text {
  text-align: center;
}

.punch-card-work {
  color: #fff;
  font-size: 40rpx;
}

.punch-card-time {
  margin-top: 20rpx;
  color: rgb(240, 240, 240);
  font-size: 32rpx;
  font-weight: 300;
}

.punch-card-bottom {
  margin-top: 36rpx;
  color: #666;
  font-size: 32rpx;
  font-weight: 400;
}

.range-show {
  color: rgb(95, 103, 207);
}
